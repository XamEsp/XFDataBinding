<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:viewmodel="clr-namespace:BasicBinding.ViewModel"
    x:Class="BasicBinding.View.BindingContextXamlPage">
    <ContentPage.BindingContext>
        <viewmodel:BindingContextViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <Frame 
            BackgroundColor="#2196F3" 
            Padding="24" 
            CornerRadius="0">
            <Label 
                Text="XAML Binding Context" 
                HorizontalTextAlignment="Center" 
                TextColor="White" 
                FontSize="36"/>
        </Frame>


        <Label 
            Text="{Binding Path=Now}" 
            HorizontalTextAlignment="Center" 
            FontSize="36"/>
    </StackLayout>
</ContentPage>